<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="My Education" big=istrue}}
            <ul>
                {{#each educations}}
                <li>
                    {{name}}
                    {{#unless isEnd }} (ще в процесі) {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>

        <section>
            {{> title data="My Certificates"}}
            <ul>
                {{#each certificates}}
                <li>
                    {{name}} / ({{id}})
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>