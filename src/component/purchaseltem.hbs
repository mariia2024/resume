{{#each itemList}}
<section class="row mt-3">
    <div class="col-12 card">
        <div class="card-body px-0 py-2">
            <div class="row">

                <div class="col-4">
                    <p class="card-title mt-3 ms-2">{{number}}</p>
                    <h4 class="mt-3 ms-2">{{status}}</h4>
                </div>

                <div class="col-2">
                    {{#with amount}}
                    <p class="mt-3">{{title}}</p>
                    <h4 class="mt-3">{{value}}</h4>
                    {{/with}}
                </div>

                <div class="col-4">
                    {{#each images}}
                    <img class="rounded mx-auto d-block" src="{{this}}" alt="{{name}}">
                    {{/each}}
                </div>

                <div class="col-2 px-2 ps-2">
                    {{#with button}}
                    <a href="{{link}}" class="mt-3 me-2 btn {{#if isPrimary}}btn-primary{{/if}}">{{text}}
                    </a>
                    {{/with}}
                </div>

            </div>
        </div>
    </div>
</section>
{{/each}}