{{#each goodsBlock}}
<section class="row mt-3">
	<div class="col-12 card">
		<div class="card-body px-0 py-2">
			<div class="row">

				<div class="col-2">
					<p class="" src="{{image}}" alt="{{name}}"></p>
					<img src="/svg/slack.svg">
				</div>

				<div class="col-3">
					<h4 class="card-title mt-3 ">{{name}}</h4>
					<p class="mt-3 mb-2 ">{{description}}</p>
				</div>

				<div class="col-3">
					{{#with price}}
					<p class="mt-3 ">{{title}}</p>
					<h3 class="mb-4">{{value}}</h3>
					{{/with}}
				</div>

				<div class="col-2">
					<p class="mt-3">{{amount}}</p>
				</div>

				<div class="col-2">
					{{#each buttons}}
					<a href="#"
						class="mt-3 btn {{#if isPrimary}}btn-primary{{/if}}{{#if isDanger}}btn-danger{{/if}}">{{text}}
					</a>
					{{/each}}
				</div>

			</div>
		</div>
	</div>
</section>
{{/each}}